<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HistoryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:listitem="@layout/item_claim" />
    <!-- XML Comments should be outside the tag's attribute list or on a new line after the tag is closed -->
    <!-- Changed ID -->
    <!-- Initially hidden, shown if data exists -->
    <!-- Good for previewing item layout -->


    <TextView
        android:id="@+id/emptyHistoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_history_yet"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="visible" /> <!-- All attributes are now inside the TextView tag, and it's self-closed -->

</RelativeLayout>
