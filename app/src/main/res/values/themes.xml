<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.TruthNudge.M3" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primaryDark</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text appearances (important for TextInputLayout) -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceButton">@style/TextAppearance.Material3.LabelLarge</item>

        <!-- Material Components default widgets -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button.IconButton.Filled</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>

</resources>
